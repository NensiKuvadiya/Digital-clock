<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- Tree View -->
    <record id="view_task_assignment_tree" model="ir.ui.view">
        <field name="name">task.assignment.tree</field>
        <field name="model">task.assignment</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="employee_id"/>
                <field name="due_date"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_task_assignment_form" model="ir.ui.view">
        <field name="name">task.assignment.form</field>
        <field name="model">task.assignment</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="employee_id"/>
                        <field name="due_date"/>
                        <field name="state"/>
                        <field name="description"/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Activity View -->
    <record id="view_task_assignment_activity" model="ir.ui.view">
        <field name="name">task.assignment.activity</field>
        <field name="model">task.assignment</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state">
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <strong><field name="name"/></strong>
                            <br/>
                            <span><field name="employee_id"/></span>
                            <br/>
                            <span>Due: <field name="due_date"/></span>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Action -->
    <record id="action_task_assignment" model="ir.actions.act_window">
        <field name="name">Task Assignments</field>
        <field name="res_model">task.assignment</field>
        <field name="view_mode">tree,form,activity,pivot</field>
    </record>

    <!-- Menu Item -->
    <menuitem id="menu_task_root" name="Task Management" sequence="10"/>
    <menuitem id="menu_task_assignment" name="Task Assignments" parent="menu_task_root" action="action_task_assignment"/>
</odoo>
